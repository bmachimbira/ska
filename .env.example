# =========================================
# SDA App - Docker Compose Environment Variables
# =========================================

# -------------------------
# General Configuration
# -------------------------
NODE_ENV=production
LOG_LEVEL=info

# -------------------------
# Domain Configuration
# -------------------------
# Update these with your actual domains
ROOT_DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
ADMIN_DOMAIN=admin.yourdomain.com
WEBSITE_DOMAIN=www.yourdomain.com
MINIO_CONSOLE_DOMAIN=minio.yourdomain.com
STORAGE_DOMAIN=storage.yourdomain.com

# Let's Encrypt email for SSL certificates
ACME_EMAIL=admin@yourdomain.com

# -------------------------
# Port Configuration
# -------------------------
# External ports (exposed to host)
HTTP_PORT=80
HTTPS_PORT=443
BACKEND_PORT=3000
WEBSITE_PORT=3200
ADMIN_PORT=3100
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
CADDY_ADMIN_PORT=2019

# -------------------------
# PostgreSQL Database
# -------------------------
POSTGRES_USER=sda_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123
POSTGRES_DB=sda_app

# -------------------------
# Redis Cache
# -------------------------
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456

# -------------------------
# MinIO Object Storage
# -------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD_789
MINIO_BUCKET=sda-media
MINIO_BROWSER_REDIRECT_URL=https://minio.yourdomain.com

# -------------------------
# JWT Authentication
# -------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_SECRET_KEY
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# -------------------------
# NextAuth (Admin Panel)
# -------------------------
NEXTAUTH_URL=https://admin.yourdomain.com
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_THIS_TO_A_RANDOM_32_CHARACTER_SECRET
BACKEND_API_KEY=CHANGE_THIS_BACKEND_API_KEY

# -------------------------
# Frontend URLs
# -------------------------
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/v1
NEXT_PUBLIC_APP_NAME=SKA Zimbabwe
NEXT_PUBLIC_SITE_URL=https://www.yourdomain.com
ADMIN_APP_NAME=SDA Admin Panel

# -------------------------
# CORS Configuration
# -------------------------
CORS_ORIGIN=https://admin.yourdomain.com,https://www.yourdomain.com

# -------------------------
# Video Streaming (Mux)
# -------------------------
# Get credentials from https://dashboard.mux.com/settings/access-tokens
STREAMING_PROVIDER=mux
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret
MUX_WEBHOOK_SECRET=your-mux-webhook-secret

# Alternative: Cloudflare Stream
# STREAMING_PROVIDER=cloudflare
# CF_ACCOUNT_ID=your-cloudflare-account-id
# CF_STREAM_TOKEN=your-cloudflare-stream-token

# -------------------------
# AI / LLM Configuration
# -------------------------
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
EMBEDDING_MODEL=text-embedding-3-large
LLM_MODEL=gpt-4-turbo-preview

# Alternative: Anthropic
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# LLM_MODEL=claude-3-opus-20240229

# -------------------------
# Firebase Cloud Messaging
# -------------------------
FCM_SERVER_KEY=your-fcm-server-key

# -------------------------
# Monitoring & Analytics
# -------------------------
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# -------------------------
# Rate Limiting
# -------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
